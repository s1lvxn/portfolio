---
import Section from '../ui/Section.astro';
import Card from '../ui/Card.astro';

interface Skill {
  name: string;
  icon: string;
  color: string;
  level: number;
}

const infrastrucureSkills: Skill[] = [
  { name: 'Windows Server', icon: 'W', color: '#61DAFB', level: 70 },
  { name: 'Active Directory', icon: 'A', color: '#4FC08D', level: 75 },
  { name: 'Citrix', icon: 'C', color: '#3178C6', level: 60 },
  { name: 'PRTG', icon: 'P', color: '#F7DF1E', level: 75 },
  { name: 'Cisco & Extreme Networking', icon: 'C', color: '#E34F26', level: 25 },
  { name: 'Fortinet Firewall', icon: 'F', color: '#1572B6', level: 15 },
  { name: 'Azure Cloud Computing', icon: 'A', color: '#651dea', level: 35 },
];

const codingkSkills: Skill[] = [
  { name: 'Powershell', icon: 'P', color: '#000000', level: 35 },
  { name: 'C#', icon: 'C#', color: '#00DC82', level: 5 },
  { name: 'Python', icon: 'P', color: '#06B6D4', level: 10 },
  { name: 'HTML', icon: 'H', color: '#BC52EE', level: 5 },
  { name: 'CSS', icon: 'C', color: '#764ABC', level: 5 },
  { name: 'SQL Languages', icon: 'S', color: '#a312e7', level: 10 },
];

const devToolsSkills: Skill[] = [
  { name: 'WMware vSphere', icon: 'V', color: '#1d8dea', level: 65 },
  { name: 'Docker', icon: 'D', color: '#F05032', level: 35 },
  { name: 'Proxmox', icon: 'P', color: '#C21325', level: 40 },
  { name: 'GitHub', icon: 'G', color: '#8DD6F9', level: 10 },
  { name: 'Windows', icon: 'W', color: '#646CFF', level: 90 },
  { name: 'Linux', icon: 'L', color: '#339933', level: 25 },
];
---

<Section id="skills" title="Technical Skills" subtitle="Technologies and tools I work with and use in my projects">
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    <!-- Infrastructure Skills -->
    <Card class="p-6">
      <h3 class="text-xl font-bold mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Infrastructure
      </h3>
      <div>
        {infrastrucureSkills.map(skill => (
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 flex items-center justify-center rounded-xl" style={`background-color: ${skill.color}20`}>
              <span class="text-xl font-bold" style={`color: ${skill.color}`}>{skill.icon.charAt(0).toUpperCase()}</span>
            </div>
            <div class="flex-1">
              <div class="flex justify-between mb-1">
                <span class="font-medium">{skill.name}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
              </div>
              <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full skill-container" style={`--skill-level: ${skill.level}%`}>
                <div class="h-2 rounded-full skill-bar" style={`background-color: ${skill.color}`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Card>

    <!-- Coding Skills -->
    <Card class="p-6">
      <h3 class="text-xl font-bold mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
        </svg>
        Scripting and Programming Languages
      </h3>
      <div>
        {codingkSkills.map(skill => (
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 flex items-center justify-center rounded-xl" style={`background-color: ${skill.color}20`}>
              <span class="text-xl font-bold" style={`color: ${skill.color}`}>{skill.icon.charAt(0).toUpperCase()}</span>
            </div>
            <div class="flex-1">
              <div class="flex justify-between mb-1">
                <span class="font-medium">{skill.name}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
              </div>
              <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full skill-container" style={`--skill-level: ${skill.level}%`}>
                <div class="h-2 rounded-full skill-bar" style={`background-color: ${skill.color}`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Card>

    <!-- Dev Tools Skills -->
    <Card class="p-6">
      <h3 class="text-xl font-bold mb-6 flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 mr-2 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        Tools & Platforms
      </h3>
      <div>
        {devToolsSkills.map(skill => (
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 flex items-center justify-center rounded-xl" style={`background-color: ${skill.color}20`}>
              <span class="text-xl font-bold" style={`color: ${skill.color}`}>{skill.icon.charAt(0).toUpperCase()}</span>
            </div>
            <div class="flex-1">
              <div class="flex justify-between mb-1">
                <span class="font-medium">{skill.name}</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{skill.level}%</span>
              </div>
              <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full skill-container" style={`--skill-level: ${skill.level}%`}>
                <div class="h-2 rounded-full skill-bar" style={`background-color: ${skill.color}`}></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Card>
  </div>
</Section> 
<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.4 });

  document.querySelectorAll('.skill-container').forEach(el => {
    observer.observe(el);
  });
</script>
